@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadStyles {
    <style>
        :root {
            --primary: #09264A;
            --accent: #f99820;
            --light: #f7f9fc;
            --dark: #2d3047;
        }

        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .hero-section {
            background: linear-gradient(135deg, var(--primary) 0%, #1a6a8a 100%);
            color: white;
            padding: 100px 0;
            text-align: center;
        }

        .app-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            color: white;
        }

        .feature-card {
            background: white;
            border-radius: 10px;
            padding: 30px;
            margin: 20px 0;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            height: 100%;
        }

            .feature-card:hover {
                transform: translateY(-5px);
            }

        .feature-icon {
            font-size: 2.5rem;
            color: var(--primary);
            margin-bottom: 15px;
        }

        .demo-section {
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            margin: 40px 0;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .step {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .step-number {
            width: 40px;
            height: 40px;
            background-color: var(--primary);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-right: 15px;
            flex-shrink: 0;
        }

        .footer {
            background-color: var(--primary);
            color: white;
            padding: 30px 0;
            text-align: center;
        }

        .screenshot {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            max-width: 100%;
            margin: 20px 0;
        }


        .landing-header {
            background-color: #09264A;
            height: 100px;
            padding: 0 30px;
            border-bottom: none;
            box-shadow: none;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .landing-header .nav-left {
                display: flex;
                align-items: center;
            }

            .landing-header #logo {
                height: 60px;
                margin-right: 12px;
            }

            .landing-header .brand-text {
                color: #fff;
                font-size: 1.25rem;
                font-weight: 700;
                text-decoration: none;
            }

            .landing-header .nav-actions a {
                margin-left: 10px;
            }

            .landing-header .btn-outline-light {
                color: #fff;
                border-color: rgba(255,255,255,0.85);
            }

                .landing-header .btn-outline-light:hover {
                    background-color: rgba(255,255,255,0.08);
                }

            .landing-header .btn-light {
                background-color: #fff;
                color: #09264A;
            }

        @@media (max-width: 767px) {
            .btnNav {
                font-size: 16px !important;
                border: none !important;
                background-color: transparent !important;
                color: white !important;
                margin: 0px !important;
                padding: 0.375rem 0px 0.375rem 0px !important;
            }

                .btnNav:hover {
                    background-color: transparent !important;
                    color: white !important;
                }
        }
    </style>
}
    <section class="hero-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="app-icon">
                        <i class="fas fa-running"></i>
                    </div>
                    <h1 class="display-4 fw-bold mb-4">SportConnect</h1>
                    <p class="lead mb-4">
                        Encontre pessoas para praticar esportes perto de você
                    </p>
                    <p class="mb-5">
                        Conecte-se com outros entusiastas do esporte, participe de eventos
                        e mantenha-se ativo de forma divertida e social.
                    </p>
                    <a href="#funcionalidade" class="btn btn-light btn-lg">Conheça a Funcionalidade</a>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5" id="funcionalidade">
        <div class="container">
            <div class="row mb-5">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="fw-bold mb-4">Como o SportConnect Funciona</h2>
                    <p class="lead">
                        Uma maneira simples de encontrar companhia para suas atividades
                        esportivas
                    </p>
                </div>
            </div>

            <div class="demo-section">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <h3 class="fw-bold mb-4">Encontre Eventos Esportivos Próximos</h3>

                        <div class="step">
                            <div class="step-number">1</div>
                            <div>
                                <h5>Escolha seu esporte</h5>
                                <p class="mb-0">
                                    Selecione entre futebol, corrida, basquete, vôlei e muitos
                                    outros.
                                </p>
                            </div>
                        </div>

                        <div class="step">
                            <div class="step-number">2</div>
                            <div>
                                <h5>Veja eventos próximos</h5>
                                <p class="mb-0">
                                    Encontre eventos acontecendo perto de você com base na sua
                                    localização.
                                </p>
                            </div>
                        </div>

                        <div class="step">
                            <div class="step-number">3</div>
                            <div>
                                <h5>Participe</h5>
                                <p class="mb-0">
                                    Inscreva-se com um toque e receba todas as informações do
                                    evento.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 text-center">
                        <img src="./images/images.jpeg"
                             alt="Pessoas se exercitando"
                             class="screenshot img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <h4>Localização</h4>
                        <p>
                            Encontre eventos esportivos acontecendo perto de você, com base
                            na sua localização atual.
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 mb-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h4>Encontre o seu Esporte</h4>
                        <p>
                            Encontre as modalidades, datas e horários que os eventos serão realizados e participe!
                        </p>
                    </div>
                </div>

                <div class="col-lg-4 mb-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h4>Comunidade</h4>
                        <p>
                            Conecte-se com outras pessoas que compartilham seus interesses
                            esportivos.
                        </p>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-lg-6 mb-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-plus-circle"></i>
                        </div>
                        <h4>Crie Seus Eventos</h4>
                        <p>
                            Não encontrou um evento que combina com você? Crie o seu próprio
                            e convide outros participantes.
                        </p>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-bell"></i>
                        </div>
                        <h4>Notificações</h4>
                        <p>
                            Receba lembretes sobre eventos que você se inscreveu na lista de espera.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h3 class="fw-bold mb-3">
                        <i class="fas fa-running me-2"></i>SportConnect
                    </h3>
                    <p class="mb-4">Conectando pessoas através do esporte</p>
                    <p>&copy; 2025 SportConnect.</p>
                </div>
            </div>
        </div>
    </footer>