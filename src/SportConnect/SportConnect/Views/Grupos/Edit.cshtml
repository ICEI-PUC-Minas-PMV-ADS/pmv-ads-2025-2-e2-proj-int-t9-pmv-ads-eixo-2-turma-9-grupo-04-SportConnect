@model CriarGrupo.Models.Grupo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Grupo</h1>


<div>
    <div style="padding: 0px 50px 0px 50px">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroMaximoParticipantes" class="control-label"></label>
                <input asp-for="NumeroMaximoParticipantes" class="form-control" />
                <span asp-validation-for="NumeroMaximoParticipantes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ListaEspera" class="control-label"></label>
                <select asp-for="ListaEspera" class="form-control">
                    <option value="" selected disabled>Selecione uma opção</option>
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
                <span asp-validation-for="ListaEspera" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="modalidade" class="control-label">Modalidade</label>

                <div id="modalidade-section">
                    @Html.DropDownList("modalidade", (IEnumerable<SelectListItem>)ViewBag.Modalidades, new { @class = "form-control", style = "border-radius: 12px; padding: 6px 12px 6px 12px;" })
                    <p id="changeText" onclick="changeInput(event)" style="color: #007bff; cursor: pointer">Não encontrou?</p>
                    <span asp-validation-for="Modalidade" class="text-danger"></span>
                </div>

                <input asp-for="Modalidade" class="form-control visually-hidden" />
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" id="estado" data-estado="@Model.Estado" onchange="getCidades()">
                    <option value="" selected disabled hidden>Selecione um estado</option>
                    <option value="AC">AC</option>
                    <option value="AL">AL</option>
                    <option value="AP">AP</option>
                    <option value="AM">AM</option>
                    <option value="BA">BA</option>
                    <option value="CE">CE</option>
                    <option value="DF">DF</option>
                    <option value="ES">ES</option>
                    <option value="GO">GO</option>
                    <option value="MA">MA</option>
                    <option value="MT">MT</option>
                    <option value="MS">MS</option>
                    <option value="MG">MG</option>
                    <option value="PA">PA</option>
                    <option value="PB">PB</option>
                    <option value="PR">PR</option>
                    <option value="PE">PE</option>
                    <option value="PI">PI</option>
                    <option value="RJ">RJ</option>
                    <option value="RN">RN</option>
                    <option value="RS">RS</option>
                    <option value="RO">RO</option>
                    <option value="RR">RR</option>
                    <option value="SC">SC</option>
                    <option value="SP">SP</option>
                    <option value="SE">SE</option>
                    <option value="TO">TO</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <select asp-for="Cidade" class="form-control" id="cidade" data-cidade="@Model.Cidade" disabled>
                    <option value="" selected disabled hidden>Selecione uma cidade</option>
                </select>
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger"> Cancelar</a>
            </div>
        </form>
    </div>
</div>



<style>
   input, select{
       max-width: 500px;
   } 

   h1 {
        font-size: 30px;
        margin-top: 30px;
        margin-bottom: 30px;
        margin-left: 50px;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn {
        border-radius: 6px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .col-md-4 {
        margin-left: 50px; 
    }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
      const estado = document.getElementById("estado");
      const cidade = document.getElementById("cidade");

      
      const estadoInicial = estado.dataset.estado || "";
      const cidadeInicial = cidade.dataset.cidade || "";

      document.addEventListener("DOMContentLoaded", async () => {
      
        if (estadoInicial) {
          estado.value = estadoInicial;
          await getCidades(true); 
        } else {
          
          estado.value = "";
          cidade.innerHTML = '<option value="" selected disabled hidden>Selecione uma cidade</option>';
          cidade.disabled = true;
        }
      });

      
      async function getCidades(tentarMarcarCidade = false) {
        if (!estado.value) {
          cidade.innerHTML = '<option value="" selected disabled hidden>Selecione uma cidade</option>';
          cidade.disabled = true;
          return;
        }

        try {
          const resp = await fetch(`https://servicodados.ibge.gov.br/api/v1/localidades/estados/${estado.value}/municipios?orderBy=nome`);
          const lista = await resp.json();

          let options = '<option value="" disabled hidden>Selecione uma cidade</option>';
          lista.forEach(m => { options += `<option value="${m.nome}">${m.nome}</option>`; });

          cidade.innerHTML = options;
          cidade.disabled = false;

        
          if (tentarMarcarCidade && cidadeInicial) {
            
            const norm = s => (s || "").normalize("NFD").replace(/[\u0300-\u036f]/g, "").trim().toUpperCase();
            const existe = lista.some(m => norm(m.nome) === norm(cidadeInicial));
            if (existe) cidade.value = cidadeInicial;
            else cidade.value = "";
          } else {
           
            cidade.value = "";
          }
        } catch (e) {
          console.error("Erro ao carregar cidades do IBGE:", e);
          cidade.innerHTML = '<option value="" selected disabled hidden>Não foi possível carregar</option>';
          cidade.disabled = true;
        }
      }

          const changeInput = (e) => {
            const section = document.getElementById("modalidade-section")
            var htmlContent = ""

            if(e.target.id == "changeText"){
                htmlContent = `
                    <input class="form-control" placeholder="Inserir modalidade" name="modalidade" id="modalidade" style="border-radius: 12px; padding: 4px 12px 6px 12px; height: 38px" type="text" />
                    <p id="changeSelect" onclick="changeInput(event)" style="color: #007bff; cursor: pointer">Voltar</p>
                `
                section.innerHTML = htmlContent
            }
            else{
                htmlContent = `
                    <select class="form-control" id="modalidade" name="modalidade" style="border-radius: 12px; padding: 6px 12px 6px 12px;">
                        <option selected hidden disabled>Procurar modalidade</option>
                        <option>Futebol</option>
                        <option>Vôlei</option>
                        <option>Futsal</option>
                        <option>Basquete</option>
                        <option>Natação</option>
                        <option>Caminhada e Corrida</option>
                        <option>Ciclismo</option>
                        <option>Tênis de Mesa</option>
                        <option>Musculação</option>
                        <option>Surf</option>
                        <option>Skate</option>
                        <option>Judô</option>
                        <option>Jiu-Jitsu</option>
                        <option>Boxe</option>
                        <option>Capoeira</option>
                        <option>Handebol</option>
                        <option>Vôlei de Praia</option>
                        <option>Futevôlei</option>
                        <option>Tênis</option>
                        <option>Atletismo</option>
                        <option>Ginástica Artística</option>
                        <option>Ginástica Rítmica</option>
                        <option>Taekwondo</option>
                        <option>Karatê</option>
                        <option>Mountain Bike</option>
                        <option>Canoagem</option>
                        <option>Remo</option>
