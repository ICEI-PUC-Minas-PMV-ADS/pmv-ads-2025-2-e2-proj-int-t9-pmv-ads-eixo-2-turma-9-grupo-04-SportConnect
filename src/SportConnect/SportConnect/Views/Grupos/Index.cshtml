<div class="container" style="margin-top: 50px">
    <div id="cards-section" class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <p><strong>Nome:</strong> @item.Nome</p>
                    <p class="mb-1"><strong>Modalidade:</strong> @item.Modalidade</p>
                    <p class="mb-1"><strong>Estado:</strong> @item.Estado</p>
                    <p class="mb-0"><strong>Cidade:</strong> @item.Cidade</p>
                </div>

                <div class="card-footer bg-white border-0 d-flex justify-content-center gap-3">
                    @{
                        var ehDono = logged && item.UsuarioId.HasValue && item.UsuarioId.Value == uid;
                        var meusGrupos = ViewBag.MeusGrupos as HashSet<int>;
                        var jaParticipa = meusGrupos != null && meusGrupos.Contains(item.Id);
                    }

                    @if (ehDono)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-custom">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-custom">Visualizar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-custom">Excluir Grupo</a>
                        <a href="@Url.Action("Index", "Eventos", new{grupoId=@item.Id})" class="btn btn-primary btn-custom">Eventos</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-custom">Visualizar</a>

                        var gruposLotados = ViewBag.GruposLotados as HashSet<int>;
                        var lotado = gruposLotados != null && gruposLotados.Contains(item.Id);

                        @if (jaParticipa)
                        {
                            @* ✅ Usuário já inscrito: mostra "Participando" (verde), Visualizar e Sair *@
                            <button type="button" class="btn btn-success btn-custom" disabled>Participando</button>

                            <form asp-action="Sair" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-custom">Sair do grupo</button>
                            </form>
                        }
                        else if (lotado)
                        {
                            @* Grupo lotado *@
                            @if (item.ListaEspera)
                            {
                                var meusGruposFila = ViewBag.MeusGruposFila as HashSet<int>;
                                var estaNaFila = meusGruposFila != null && meusGruposFila.Contains(item.Id);

                                if (estaNaFila)
                                {
                                    @* ✅ Já está na fila: mostra botão para sair *@
                                    <form asp-action="SairDaFila" asp-route-id="@item.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-custom">Sair da lista de espera</button>
                                    </form>
                                }
                                else
                                {
                                    @* 🔸 Ainda não está na fila: pode entrar *@
                                    <form asp-action="Participar" asp-route-id="@item.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="waitlist" value="true" />
                                        <button type="submit" class="btn btn-warning btn-custom">Entrar na lista de espera</button>
                                    </form>
                                }
                            }
                            else
                            {
                                @* Lotado e sem fila *@
                                <button type="button" class="btn btn-secondary btn-custom" disabled>Grupo lotado</button>
                            }
                        }
                        else
                        {
                            @* Ainda há vagas: participar normalmente *@
                            <form asp-action="Participar" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary btn-custom">Participar</button>
                            </form>
                        }
                    }


                </div>
            </div>
        </div>
    }
    </div>
</div>

