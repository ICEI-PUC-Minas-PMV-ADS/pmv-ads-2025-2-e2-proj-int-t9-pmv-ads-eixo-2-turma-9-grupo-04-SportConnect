@model CriarGrupo.Models.Grupo

@{
    ViewData["Title"] = "Remover Participantes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">

        <a asp-action="Details" asp-route-id="@Model.Id"
           style="font-size: 3rem; color: black; text-decoration: none;">
            &larr;
        </a>

        <a asp-controller="Grupos" asp-action="BaixarRelatorioPDF" asp-route-id="@Model.Id"
           class="btn btn-link d-flex align-items-center"
           style="color: black; text-decoration: none; padding: 0; font-size: 1.1rem;">

            <img src="~/images/download.png" alt="Download"
                 style="width: 22px; height: 22px; margin-right: 8px;" />
            <span>Download Relatório</span>
        </a>
    </div>
    <ul class="list-group">
        @if (ViewBag.Participantes != null && ((List<Usuario>)ViewBag.Participantes).Any(u => u.Id != Model.UsuarioId))
        {
            @foreach (var participante in (List<Usuario>)ViewBag.Participantes)
            {
                @if (participante.Id != Model.UsuarioId)
                {
                    <li class="list-group-item border-0 d-flex align-items-center py-2 px-0">

                        <span style="font-size: 1.25rem; width: 300px;">@participante.Nome</span>

                        <form asp-controller="Grupos" asp-action="RemoverParticipante" method="post">
                            <input type="hidden" name="grupoId" value="@Model.Id" />
                            <input type="hidden" name="usuarioId" value="@participante.Id" />
                            <button type="submit" class="btn btn-danger"
                                    style="border-width: 0.8px; border-radius: 12px;">
                                Remover
                            </button>
                        </form>
                    </li>
                }
            }
        }
        else
        {
            <li class="list-group-item border-0 px-0" style="font-size: 1.25rem;">
                Não há participantes para remover.
            </li>
        }
    </ul>
</div>